extends base.pug

block style
    style 
     include ../static/style.css
     include ../static/contact.css


block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post" class="myform")
            input(type="text", name="name",  class="myInput" placeholder="Enter your name")
            input(type="age", class="myInput" , name="age", placeholder="Enter your age")
            input(type="gender", class="myInput" , name="gender", placeholder="Enter your gender")
            input(type="email", class="myInput" , name="email", placeholder="Enter your email")
            input(type="phonenumber", class="myInput" , name="phonenumber", placeholder="Enter your phone number")
            textarea(name='Message' class= 'myInput' rows='10' cols='20' placeholder='Message')
            button(class="btn")
                | Submit